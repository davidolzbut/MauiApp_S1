<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp_S1.Views.AddFlowerPage"
             Title="Add Flower">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Spacing="20">
            <Label Text="Přidat kytku"
                   FontSize="24"
                   HorizontalOptions="Center"
                   ></Label>
            
            <Entry 
                x:Name="FlowerName"
                HorizontalOptions="Center"
                ></Entry>
            
            <Entry 
                x:Name="FlowerType"
                HorizontalOptions="Center"
            ></Entry>
            
            
            <Button 
                Text="Přidat"
                x:Name="BtnAddFlower"
                Clicked="BtnAddFlower_OnClicked"
                HorizontalOptions="Center"
            ></Button>
            
            <Button 
                Text="Zpět"
                x:Name="BtnBack"
                Clicked="BtnBack_OnClicked"
                HorizontalOptions="Center"
            ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>